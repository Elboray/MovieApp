<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="com.chocolatecake.movieapp.ui.tv_details.TvDetailsViewModel" />-->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--region main image-->
            <ImageView
                android:id="@+id/image_view_main_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <View
                android:id="@+id/view_image_gradient"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/main_image_gradient"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_main_image" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/cardview_light_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="3dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_play"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@color/secondary_text_87"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_main_image"
                app:layout_constraintEnd_toEndOf="@+id/image_view_main_image"
                app:layout_constraintTop_toBottomOf="@+id/image_view_main_image"
                app:shapeAppearanceOverlay="@style/circleShape" />
            <!--endregion-->

            <!--region info-->
            <TextView
                android:id="@+id/text_view_tv_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="The Super Mario Bros."
                android:textColor="@color/secondary_text_87"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_image_gradient" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_genere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:chipSpacingHorizontal="4dp"
                app:chipSpacingVertical="-8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_tv_title">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure" />

            </com.google.android.material.chip.ChipGroup>

            <RatingBar
                android:id="@+id/rating"
                style="@style/CustomRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chip_group_genere" />

            <TextView
                android:id="@+id/text_view_rate_this_tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Rate This Tv Show"
                android:textColor="@color/primary"
                app:layout_constraintBottom_toBottomOf="@+id/rating"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="8"
                app:layout_constraintTop_toBottomOf="@id/rating"
                tools:layout_editor_absoluteX="16dp"
                tools:text="@tools:sample/lorem/random" />
            <!--endregion-->

            <!--region people-->
            <TextView
                android:id="@+id/text_view_cast_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Cast"
                android:textColor="@color/secondary_text_87"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_description" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/text_view_cast_section_title"
                tools:listitem="@layout/item_people" />
            <!--endregion-->

            <!--region seasons-->
            <TextView
                android:id="@+id/text_view_seasons_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Seasons"
                android:textSize="@dimen/text_large"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_people" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_seasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text_view_seasons_section_title"
                tools:itemCount="3"
                tools:listitem="@layout/item_season_horizontal" />

            <!--endregion-->

            <!--region recommended-->
            <TextView
                android:id="@+id/text_view_recommended_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Recommended"
                android:textSize="@dimen/text_large"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_seasons" />

            <TextView
                android:id="@+id/text_view_show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Show more"
                android:textColor="@color/primary"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_recommended_section_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/text_view_recommended_section_title"
                tools:listitem="@layout/item_media_vertical" />
            <!--endregion-->

            <!--region comments-->
            <TextView
                android:id="@+id/text_view_comments_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="10.4K Comments"
                android:textColor="@color/secondary_text_87"
                android:textSize="@dimen/text_large"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_recommended"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/text_view_comments_section_title"
                tools:itemCount="4"
                tools:listitem="@layout/item_comment" />

            <!--endregion-->

            <!--region loading-->
            <!--            <ProgressBar-->
            <!--                android:id="@+id/progressBar"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:indeterminateTint="@color/primary"-->
            <!--                app:isVisible="@{viewModel.state.loading}"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                tools:visibility="invisible" />-->
            <!--endregion-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>