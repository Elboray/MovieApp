<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="com.chocolatecake.viewmodel.profile.ProfileListener" />
        <variable
            name="viewModel"
            type="com.chocolatecake.viewmodel.profile.ProfileViewModel" />

        <variable
            name="uiMode"
            type="android.app.UiModeManager" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_profile"
            android:layout_width="123dp"
            android:layout_height="133dp"
            android:layout_marginStart="118dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="118dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@tools:sample/backgrounds/scenic"
            app:imageUrl="@{viewModel.state.avatarUrl}" />

        <TextView
            android:id="@+id/text_view_profile_username"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/spacing_custom"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_profile"
            tools:text=" @el-mtarsham"
            android:text="@{viewModel.state.username}" />

        <TextView
            android:id="@+id/text_view_favorite"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_extra_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_heart"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/favorite"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_profile_username"
            android:onClick="@{()->listener.onClickFavorite()}"/>

        <TextView
            android:id="@+id/text_view_watchlist"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_custom"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_bookmark"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/watchlist"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_favorite"
            android:onClick="@{()->listener.onClickWatchlist()}"/>

        <TextView
            android:id="@+id/text_view_watch_history"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_custom"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/watch_history"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_watchlist"
            android:onClick="@{()->listener.onClickWatchHistory()}"/>

        <TextView
            android:id="@+id/text_view_mylists"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_custom"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_checklist"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/my_lists"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_watch_history"
            android:onClick="@{()->listener.onClickMyLists()}"/>

        <TextView
            android:id="@+id/text_view_rating"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_custom"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/rating"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_mylists"
            android:onClick="@{()->listener.onClickRating()}"/>

        <TextView
            android:id="@+id/text_view_puzzle"
            style="@style/TextStyle.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_custom"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/custom_card_background"
            android:drawableStart="@drawable/ic_gamepad"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTint="@color/on_background_38"
            android:padding="@dimen/spacing_small"
            android:text="@string/popcorn_puzzles"
            android:textColor="@color/on_background_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_rating"
            android:onClick="@{()->listener.onClickPopcornPuzzles()}"/>

