<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.chocolatecake.viewmodel.tv_shows.TVShowsUI" />

        <variable
            name="listener"
            type="com.chocolatecake.viewmodel.tv_shows.TVShowsListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeable_ImageView"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/spacing_small_8dp"
            android:layout_height="@dimen/custom_height_card"
            android:layout_marginTop="8dp"
            android:foregroundGravity="center"
            android:onClick="@{()-> listener.onClickTVShows(item.id)}"
            android:scaleType="centerCrop"
            app:imageUrl="@{item.imageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_view_rates_number"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/spacing_tiny_4dp"
            android:gravity="center"
            android:text="@{String.valueOf(item.rate)}"
            android:textColor="#f6f6f6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="9.6" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>