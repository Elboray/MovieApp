<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />

    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/search_edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16sp</item>

    </style>

    <!--region Font-->
    <style name="TextStyle">
        <item name="android:fontFamily">@font/plus_jakarata_sans</item>
    </style>

    <!--region Title-Font-->
    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <!--region Body-Font-->
    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <!--region label-Font-->
    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.LabelBody">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <style name="TextStyle.LabelMedium.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/spacing_medium</item>
        <item name="chipEndPadding">@dimen/spacing_medium</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>
    <!--endregion-->

    <style name="ViewDividerStyle">
        <item name="android:radius">@dimen/radius_full</item>
    </style>

    <!--endregion-->
</resources>